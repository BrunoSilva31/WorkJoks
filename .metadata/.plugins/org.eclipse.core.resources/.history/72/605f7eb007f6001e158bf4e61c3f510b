package com.example.freela.demo.config;

import java.util.Arrays;
import java.util.Date;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.context.annotation.Configuration;
import org.springframework.context.annotation.Profile;

import com.example.freela.demo.entities.User;
import com.example.freela.demo.repositories.UserRepository;

@Configuration
@Profile("test")
public class TestConfig implements CommandLineRunner{
	
	@Autowired
	private UserRepository userRepository;

	@Override
	public void run(String... args) throws Exception {
		User u1 = new User();
		u1.setName("Bruno");
		u1.setCpf("789456");
		u1.setEmail("bruno@email.com");
		u1.setPhone("999999999");
		u1.setFormattedDate("25/11/2024 20:30");
		u1.setAmbiente("mezanino");
		
		userRepository.saveAll(Arrays.asList(u1));
	}
	
	
}
